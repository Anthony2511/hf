.about
  &__record
    background url('/img/background-about.jpg') no-repeat top center / cover
    background-position 50% 40%
    position relative
    z-index 10
    transform skewY(-4deg)
    margin-top s($marginTitle)
    &:before
      content ''
      position absolute
      width 100%
      height 100%
      display block
      background-color alpha($cOrange,0.9)
  &__record-bloc
    position relative
    z-index 20
    padding s(50,16) 0
    text-align center
    transform skewY(4deg)
  &__record-text
    padding s($paddingBloc,16) 0
    font-family 'opensans'
    color $cWhite
    line-height 1.8
    font-weight: 500
    width 50%
    margin 0 auto
