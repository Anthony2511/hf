.header-home
  background url('/img/Background.jpg') no-repeat top center / cover
  background-position 50% 50%
  height 46em
  position relative
  z-index 5
  &__bloc
    color $cWhite
    display flex
    flex-direction column
    align-items center
    position absolute
    right 0
    left 0
    top 40%
  &__title
    font-family 'montserrat'
    font-size s(40, 16)
    font-weight: 700
  &__text
    font-family 'opensans'
    max-width 35%
    line-height 1.5
    text-align center
    margin s(20,16) 0 s(50,16)
