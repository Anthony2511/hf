.header-home
  background url('/img/Background.jpg') no-repeat top center / cover
  background-position 50% 50%
  height 100vh
  position relative
  z-index 5
  &__bloc
    color $cWhite
    display flex
    flex-direction column
    align-items center
    position absolute
    right 0
    left 0
    top 40%
  &__title
    font-family 'montserrat'
    font-size s(40, 16)
    font-weight: 700
    text-align center
  &__text
    font-family 'opensans'
    max-width 35%
    line-height 1.5
    text-align center
    margin s(20,16) 0 s(50,16)

.header
  height 170px
  background-position 50% 38%

//MEDIA QUERIES

//1300PX
@media screen and (max-width:1300px)
  .header-home
    &__text
      max-width 50%
    &__bloc
      padding 0 s(20)
      z-index -1

//900PX
@media screen and (max-width:900px)
  .header-home
    &__text
      max-width 70%
      font-size s(14)
    &__title
      font-size s(35)

//650PX
@media screen and (max-width:650px)
  .header-home
    &__text
      max-width 90%
      margin s(20,14) 0 s(30,14)

//450PX
@media screen and (max-width:450px)
  .header-home
    &__text
      max-width 100%
    &__title
      font-size s(28)

//378PX
@media screen and (max-width:378px)
  .header-home
    background-position 65% 50%