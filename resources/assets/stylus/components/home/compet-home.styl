.compet-home
  padding s($paddingContainer,16) 0
  &__container
    display flex
    flex-direction row
    justify-content space-between
    font-family 'opensans'
    width 100%
    color $cDarkBlue
    margin-top s(50,16)
  &__bloc-left
    padding s($paddingBloc,16)
    width 49%
    background-color $cWhite
    border-radius 10px
    position relative
  &__bloc-right
    width 49%
    clearfix()
  &__bloc
    background-color $cWhite
    padding s($paddingBloc,16)
    border-radius 10px
    margin-bottom s(20,16)
    position relative
  &__link
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    width 100%
    height 100%
    display block
  &__left-flex
  &__right-flex
    display flex
    flex-direction row
  &__left-date
    font-size s(50,16)
    font-weight: 700
    background-color $cOrange
    padding s(20,50) s(30,50)
    color $cWhite
    font-family 'opensans'
    border-radius 10px
    text-align center
    margin 0 s(10,50) s(20,50) 0
    transition .4s ease-in-out
    & span
      text-transform: uppercase
      display block
      font-size s(25,50)
  &__left-title
    font-family 'montserrat'
    font-size s(25,16)
    font-weight: 700
    margin-bottom s(20,25)
  &__left-location
    &:before
      icon('location')
      color $cDarkOrange
      margin-right s(10,16)
  &__left-text
    line-height 1.6
    margin-bottom s(20,16)
  &__bloc-date
    font-size s($mediumTitle,16)
    font-weight: 700
    background-color $cOrange
    padding s(15,$mediumTitle) s(20,$mediumTitle)
    color $cWhite
    font-family 'opensans'
    border-radius 10px
    text-align center
    margin 0 s(10,30) s(20,30) 0
    transition .4s ease-in-out
    & span
      text-transform: uppercase
      display block
      font-size s($fontBase,$mediumTitle)
  &__bloc-title
    font-family 'montserrat'
    font-size s(20,16)
    font-weight: 700
    margin-bottom s(15,20)
  &__bloc-location
    &:before
      icon('location')
      color $cDarkOrange
      margin-right s(10,16)

.compet-home__bloc-left:hover .button-simple:after,
.compet-home__bloc:hover .button-simple__size:after
  transform translateX(5px)
  transition .3s ease-in-out
  color $cDarkOrange

//MEDIA QUERIES

//1300px
@media screen and (max-width:1300px)
  .compet-home
      padding s(50) s(20)

//1024px
@media screen and (max-width:1024px)
  .compet-home
    &__container
      flex-direction column
      text-align center
    &__bloc-left
      width 100%
      margin-bottom s(20)
      text-align left
    &__bloc-right
      width 100%
    &__bloc
      text-align left

//600px
@media screen and (max-width:600px)
  .compet-home
    &__left-date
      font-size s(40)
    &__bloc-date
      font-size s(25)
    &__left-title
      font-size s(22)
    &__bloc-title
      font-size s(16)
    &__left-location
      font-size s(14)
    &__bloc-location
      font-size s(14)
    &__left-text
      font-size s(14)
    &__bloc-left
      padding s(20)
    &__bloc
      padding s(20)

//400px
@media screen and (max-width:400px)
  .compet-home
    &__left-date
      font-size s(30)
    &__bloc-date
      font-size s(20)
    &__left-title
      font-size s(20)
      margin-bottom s(5,20)
      line-height 1.3
    &__bloc-title
      font-size s(14)
      line-height 1.2
      margin-bottom s(5,14)
    &__left-location
      font-size s(12)
    &__bloc-location
      font-size s(12)
    &__infos-bloc
      margin-top s(15)
    &__left-flex,
    &__right-flex
      justify-content center
      align-items flex-start
      margin-bottom s(10)


