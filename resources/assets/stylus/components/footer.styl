.footer
  margin-top s(150,16)
  position relative
  overflow hidden
  height 479px
  color $cWhite
  font-family 'opensans'
  &__bloc-container
    position relative
    z-index 30
    padding s(182,16) 0 0
  &__container
    display flex
    flex-direction row
    justify-content space-between
    padding-bottom s(50,16)
  &__bg
    position absolute
    top 0
    bottom 0
    right 0
    left 0
    width 100%
    height 100%
    background-color $cOrange
    transform skewY(-5deg)
    transform-origin top right
  &__title
    font-size s(30,16)
    font-family 'montserrat'
    font-weight 700
    margin-bottom s(30,30)
    &:after
      content ''
      display block
      background-color $cWhite
      width s(30,30)
      height s(2,30)
  &__contact-item
    text-transform: uppercase
    font-weight: 700
    line-height 2
    & span
      text-transform lowercase
      font-weight: 400
  &__copyright
    text-align center
    border-top 1px solid $cWhite
    padding s(20,16) 0
    & a
      font-weight:700
  &__results-item
    line-height 2
  &__results-link
    position relative
    display inline-block
    &:before
      content ''
      position absolute
      bottom 0
      right 50%
      left 0
      top 0
      height 2px
      background-color $cWhite
      transform scaleX(0)
      transform-origin bottom left
      transition transform .3s ease-in-out
    &:after
      content ''
      position absolute
      bottom 0
      right 0
      left 50%
      height 2px
      background-color $cWhite
      transform scaleX(0)
      transform-origin bottom right
      transition transform .3s ease-in-out
    &:hover
      &:before
        transform scaleX(1)
      &:after
        transform scaleX(1)
  &__social
    display flex



