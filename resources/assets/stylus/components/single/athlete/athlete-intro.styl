.athlete-intro
  background-color $cLightGrey
  font-family 'opensans'
  margin-top s(100)
  &__container
    display: flex
    flex-direction row
  &__bloc
    margin-left s($paddingBloc)
    width 73%
    color $cBlue
  &__bloc-discipline,
  &__bloc-division
    display flex
    flex-flow row wrap
  &__figure
    position relative
    top s(-50)
    width 27%
    & img
      border-radius 10px
  &__name
    font-family 'montserrat'
    font-size s(40,16)
    font-weight: 600
    color $cDarkBlue
  &__division
    background-color $cDarkOrange
    text-transform: uppercase
    color $cWhite
    font-style italic
    padding s(10,16) s(20,16)
    font-weight: 300
    border-radius 10px
    margin-left s(30,16)
  &__title
    display flex
    flex-direction row
    align-items center
    margin s($paddingBloc) 0
  &__content-bloc
    margin-top s($paddingBloc)
    display flex
    flex-direction row
    justify-content flex-start
    flex-wrap wrap
  &__content-title
    display block
    font-size s(18,16)
    font-weight: 300
    margin-bottom s(10,18)
  &__content-text
    font-weight 700
    transition .3s ease-in-out
    &--discipline
      margin 0 0 s(5,16) s(5,16)
      &:first-child
        margin-left 0
      &:nth-child(3n+5)
        margin-left 0
      &:after
        content ','
      &:last-child
        &:after
          content none
    &--division
      margin 0 0 s(5,16) s(5,16)
      &:first-child
        margin-left 0
      &:nth-child(3n+4)
        margin-left 0
      &:after
        content ','
      &:last-child
        &:after
          content none
  &__content
    width 33.3333%
    margin-bottom s(20,16)
    &--width
      width 100%
  &__trainer
    display flex
    flex-direction row
    align-items center
  &__trainer-link
    width 33.3333333333%
  &__trainer-figure
    & img
      border-radius 50%
      margin-right s(10,16)
  &__bloc-athlete
    display flex
    flex-flow row wrap


.athlete-intro__trainer-link:hover .athlete-intro__content-text
  color $cDarkOrange
  transition .3s ease-in-out
