.athlete-record
  padding-top s($marginTitle)
  display flex
  flex-direction row
  justify-content space-between
  &__bloc
    width 47.5%
  &__table
    margin-top s($paddingBloc)
    font-family 'opensans'
    color $cBlue
  &__table-title
    font-weight: 700
    font-size s(18,16)
    text-align left
    padding s(10,18) s(20,18)
  &__table-row
    & td
      padding s(10) s(20)
      font-weight: 300
      text-align center
  &__table-tbody
    & tr
      &:nth-child(odd)
        background-color alpha($cOrange,0.3)