.equipement
  &__container
    display flex
    flex-flow row wrap
    justify-content flex-start
    margin s($marginTitle) 0
    font-family 'montserrat'
    color $cWhite
  &__bloc
    width 27.5%
    margin-right 8.75%
    margin-bottom s($marginTitle)
    overflow hidden
    &:nth-child(3n+3)
      margin-right 0
  &__figure
    position relative
    &:before
      content ''
      display block
      position absolute
      top 0
      right 0
      left 0
      bottom 0
      background-color alpha($cBlue,0)
      transition .3s ease-in-out
    & img
      width 100%
      display block
  &__title
    position absolute
    font-size s(25)
    font-weight 700
    text-align center
    width 100%
    top 50%
    opacity 0
    transform translateY(-30px)
    transition .5s ease-in-out
  &__size
    position absolute
    top 60%
    background-color alpha($cBlue,0.5)
    width 100%
    text-align center
    font-weight: 700
    padding s(10) 0
    & span
      &:after
        content '-'
      &:last-child
        &:after
          content none
  &__price
    position absolute
    top 30px
    font-family 'opensans'
    font-size s(18,16)
    font-style: italic
    font-weight: 300
    background-color $cDarkOrange
    padding s(10,18) s(30,18)
    border-radius 0 10px 10px 0
    opacity 0
    transform translateX(-50px)
    transition .3s ease-in-out

.equipement__bloc:hover .equipement__title
  opacity 1
  transition .5s ease-in-out
  transform translateY(0px)

.equipement__bloc:hover .equipement__figure:before
  background-color alpha($cBlue,0.5)
  transition .3s ease-in-out

.equipement__bloc:hover .equipement__price
  opacity 1
  transition .3s ease-in-out
  transform translateX(0px)