.index_training
  background-color $cLightGrey
.trainings
  &__bloc
    display flex
    flex-direction row
    justify-content:space-between
    margin-top s($marginTitle)
  &__single
    background-color $cWhite
    width 30%
    border-radius 10px
    padding s($paddingBloc)
    color $cDarkBlue
    font-family 'opensans'
  &__intro
    display flex
    flex-flow row nowrap
    justify-content space-between
    font-family 'montserrat'
    margin-bottom s(20,16)
  &__day
    font-size s(25,16)
    font-weight: 300
  &__hour
    font-size s(25,16)
    font-weight: 600
  &__type
    font-weight: 600
    display block
    &--sprint
      &:before
        icon('course')
        color $cOrange
        font-size s(18)
        margin-right s(10,18)
  &__text
    font-weight: 400
    line-height 1.7
    margin s(20,16) 0
  &__trainers
    display flex
    flex-flow row
    align-items center
  &__figure
    margin-right s(10)
    & img
      border-radius 50%
  &__trainer-name
    font-size s(18,16)
    font-weight: 700
