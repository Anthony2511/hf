.listing-compet
  &__container
    column-count 2
    font-family: 'opensans'
    width: 100%
    color $cDarkBlue
    margin-top s($marginTitle)
    margin-bottom s(35)
  &__bloc
    padding s($paddingBloc,16)
    width 100%
    background-color $cWhite
    border-radius 10px
    position relative
    margin-bottom s(15)
    display: inline-block //for column-count

.listing-compet__bloc:hover .button-simple:after,
.listing-compet__bloc:hover .button-simple__size:after
  transform translateX(5px)
  transition .3s ease-in-out
  color $cDarkOrange

//MEDIA QUERIES

//1300PX
@media screen and (max-width:1300px)
  .listing-compet
    &__container
      padding 0 s(20)

//1024PX
@media screen and (max-width:1024px)
  .listing-compet
    &__container
      column-count 1

//600PX
@media screen and (max-width:600px)
  .listing-compet
    &__bloc-left
      padding s(20)
    &__bloc
      padding s(20)
