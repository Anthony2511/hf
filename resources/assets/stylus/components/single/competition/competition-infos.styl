.infos-competition
  margin-top s(-33)
  display flex
  flex-direction row
  justify-content flex-start
  font-family 'opensans'
  color $cBlue
  &__bloc
    width 100%
  &__bloc-img
    display flex
    flex-flow row wrap
    justify-content space-between
    margin-top s(30)
  &__text
    font-size s(18)
    margin-top s(30,18)
    font-weight 300
    line-height 1.6

//MEDIA QUERIES

//1300PX
@media screen and (max-width:1300px)
  .infos-competition
    padding 0 s(20)

//1024PX
@media screen and (max-width:1024px)
  .infos-competition
    &__text
      text-align center

//450PX
@media screen and (max-width:450px)
  .infos-competition
    &__text
      font-size s(14)

