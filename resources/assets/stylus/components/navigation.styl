.nav
  &__container
    display flex
    flex-direction row
    justify-content space-between
    align-items center
    padding-top s(50)
  &__container-logo
    cursor pointer
  &__menu
    display inline-block
    position relative
    list-style none
    font-family 'opensans'
    color $cWhite
    margin 0
    padding 0
    z-index 15
  &__item-sub
    position relative
    &:after
      icon('arrow')
      font-size s(8)
      padding-left s(10,8)
  &__item
    list-style none
    display inline-block
    padding 0
    margin 0
    & a
      position relative
      display inline-block
      outline none
      text-decoration none
      letter-spacing 1px
      font-weight 400
      text-shadow: 0 0 1px rgba(255,255,255,0.3)
      &.active
        position relative
        color $cDarkOrange
      &:after
        position absolute
        top 100%
        left 0
        width 100%
        height 1.5px
        background-color $cDarkOrange
        content ''
        opacity 0
        margin-top s(5)
        transition opacity 0.3s, transform 0.3s
        transform: translateY(10px)
  &__item + &__item
    margin-left s(50)
  &__item-sub
    & a
      &:before
        content none
      &:after
        content none
  &__sub-nav
    position absolute
    display none
    top 2.5em
    margin-top -1px
    padding 0.5em 1em
    background-color $cLightGreyThree
    border-radius 10px
    &--width
      width s(215)
    &.open
      display: block
    & ul
      display inline-block
      vertical-align top
      margin 0 1em 0 0
      padding 0
      &:before
        position: absolute
        top -11px
        right 0
        left 20px
        width 0
        height 0
        content ''
        transform rotate(360deg)
        border-width 0 9.5px 11px 9.5px
        border-style solid
        border-style inset
        border-color transparent transparent $cLightGreyThree transparent
    & li
      display block
      list-style-type none
      margin 0
      padding 10px
      color $cBlue
      font-weight 400
      & a
        transition .3s ease-in-out
        width 100%
        &.active
          position relative
          color $cDarkOrange
        &:hover
          color $cDarkOrange
          transition .3s ease-in-out
  //ICON MENU
  &__button
    top s(42)
    right s(20,16)
    width s(35,16)
    height s(80,16)
    display none
  &__icon
    position: relative
    width: s(35,16)
    height: s(45,16)
    margin: s(5,16) auto
    cursor: pointer
    transition: .5s ease-in-out
    transform: rotate(0deg)
    & span
      display block
      position absolute
      height s(5,20)
      width 100%
      background $cBlack
      border-radius s(9,16)
      opacity 1
      left 0
      transform rotate(0deg)
      transition .25s ease-in-out
  &__icon span:nth-child(1)
    top: s(8,16)
  &__icon span:nth-child(2)
    top: s(18,16)
  &__icon span:nth-child(3)
    top s(18,16)
  &__icon span:nth-child(4)
    top: s(28,16)
  &__icon span
    position: absolute
    left: 0
    display: block
    width: 100%
    height: s(4,16)
    transition: .25s ease-in-out
    transform: rotate(0deg)
    opacity: 1
    border-radius: s(9,16)
    background: $cWhite

.with-menu
  .nav
    &__menu-bloc
      height 100%
      transition height .5s ease
.menu-unfolded
  .nav
    &__icon span:nth-child(1)
      top: s(18,16)
      width: 0%
      left: 50%
    &__icon span:nth-child(2)
      transform: rotate(45deg)
    &__icon span:nth-child(3)
      transform: rotate(-45deg)
    &__icon span:nth-child(4)
      top: s(18,16)
      width: 0%
      left: 50%

.nav__item a:hover::after,
.nav__item a:focus::after {
  opacity 1
  transform translateY(0px)
}

//MEDIA QUERIES

//1300PX
@media screen and (max-width:1300px)
  .nav
    padding 0 s(20)

//1100PX
@media screen and (max-width:1100px)
  .nav
    &__item
      font-size s(14)
    &__sub-nav
      &--width
        width s(220)

//1024PX
@media screen and (max-width:1024px)
  .nav
    padding 0
    &__button
      display inline-block
      position: absolute
      z-index 50
      text-align: right
      cursor pointer
    &__menu-bloc
      margin-top s(75,22)
      height 0
      padding 0
      overflow: hidden
      transition .5s height ease
    &__container-logo
      width 100%
      & figure
        padding-left s(20)
    &__item
      display block
      font-size s(16)
      width 100%
    &__item + &__item
      margin-left 0
      margin-top s(50,18)
    &__container
      display block
  .with-menu
    .nav
      background-color $cBlue
      padding 0
      &__container
        padding  s(50) 0 0
        height 100vh
      &__container-logo
        & figure
          padding-left s(20)
      &__menu-bloc
        text-align center
      &__menu
        display flex
        flex-direction column
        justify-content center
        align-items center
      &__sub-nav
        position inherit
        padding 0
        background-color $cDarkBlue
        border-radius 0
        margin 0
        top s(10)
        &--width
          width 100%
        & ul
          &:before
            content none
        & li
          color $cWhite

//378PX
@media screen and (max-width:378px)
  .nav
    &__container-logo
      width 150%







