.record-intro
  padding s(50) s(20)
  &__table
    margin-top s(30)
    font-family 'opensans'
    color: $cBlue
    width 100%
  &__table-title
    font-weight: 700
    font-size s(18)
    text-align center
    padding: s(10,18) s(20,18)
    &:after
      icon('arrow')
      display inline-block
      font-size s(7)
      margin-left 5px
      position relative
      top s(-2)
  &__margin
    margin-bottom s(20,25)

.tablesorter-header-inner
  display inline-block

//MEDIA QUERIES

//1300PX
@media screen and (max-width: 1300px)
  .record-intro
    &__table-title
      font-size s(16)

//1024PX
@media screen and (max-width: 1024px)
  .record-intro
    &__table-title
      text-align center

//768PX
@media screen and (max-width: 768px)
  .record-intro
    &__table-title
      font-size s(14)
      &:after
        font-size s(5)

//500PX
@media screen and (max-width: 500px)
  .record-intro
    &__table-title
      padding s(5,14) s(10,14)

//400PX
@media screen and (max-width: 400px)
  .record-intro
    &__table-title
      font-size s(12)

//350PX
@media screen and (max-width: 350px)
  .record-intro
    &__table-title
      font-size s(12)
